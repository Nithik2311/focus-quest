{
    "manifest_version": 3,
    "name": "Focus Quest Companion",
    "version": "1.0",
    "description": "Companion extension for Focus Quest to monitor study activity.",
    "permissions": [
        "tabs",
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:5173/*",
                "http://localhost:3000/*",
                "http://localhost:3003/*",
                "http://localhost:5001/*",
                "http://localhost:5002/*",
                "http://127.0.0.1:5173/*",
                "http://127.0.0.1:3000/*",
                "http://127.0.0.1:3003/*",
                "http://127.0.0.1:5001/*",
                "http://127.0.0.1:5002/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "http://localhost/*",
            "http://127.0.0.1/*"
        ]
    }
}